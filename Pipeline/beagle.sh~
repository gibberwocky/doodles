#!/bin/bash
#$ -M david.wragg@toulouse.inra.fr
#$ -m a


# ==============================================================================
# BEAGLE
# ==============================================================================

LIKE=
OUT=
BEAGLE="/usr/local/bioinfo/src/Beagle/beagle3.jar"

while getopts ":l:o:b:" opt; do
  case $opt in
    l) LIKE=${OPTARG};;
    o) OUT=${OPTARG};;
    b) BEAGLE=${OPTARG};;
  esac
done

if [[ -z ${LIKE} ]] | [[ -z ${OUT} ]] | [[ -z ${BEAGLE} ]]
then
  exit 1
fi


# Phase and impute missing data
java -d64 -jar ${BEAGLE} like=${LIKE} out=${OUT}
