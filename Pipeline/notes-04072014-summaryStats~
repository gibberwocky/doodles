# Paths
DUMP="/home/dwragg/work/tmp"
PERLSCRIPTS=/home/dwragg/save/Scripts/Perl

# Generate list of bees
BEES=(${DUMP}/*/vcfs/*clean.vcf.gz)
tmp=(${BEES[@]/_clean.vcf.gz/})
BEES=(${tmp[@]##*/})
printf -- '%s\n' "${BEES[@]}" > ${DUMP}/vcfs/bees.list

# path passed to script should not terminate in a '/'
perl ${PERLSCRIPTS}/StatSummary.pl ${DUMP} ${DUMP}/vcfs/bees.list > ${DUMP}/vcfs/bees.stats



